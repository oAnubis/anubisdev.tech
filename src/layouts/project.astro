---
import MainHead from '../components/MainHead.astro';
import Footer from '../components/Footer.astro';
import Nav from '../components/Nav.astro';

const { content } = Astro.props;
---

<html lang={content.lang || 'en'}>
	<head>
		<MainHead title={content.title} description={content.description} />
		<style>
			.hero {
				padding: 8rem;
				display: flex;
				background-color: var(--t-fg);
				background-repeat: no-repeat;
				background-size: cover;
				min-height: 25vw;
				color: white;
				flex-direction: column;
				align-items: center;
				justify-content: center;
			}

			a.button {
				border: none;
				background: #404040;
				color: aqua !important;
				font-weight: 100;
				padding: 20px;
				text-transform: uppercase;
				border-radius: 6px;
				display: inline-block;
				transition: all 0.3s ease 0s;
			}

			a.button:hover{
				color: purple !important;
				font-weight: 700 !important;
				letter-spacing: 3px;
				background: none;
				-webkit-box-shadow: 0px 5px 40px -10px rgba(0,0,0,0.57);
				-moz-box-shadow: 0px 5px 40px -10px rgba(0,0,0,0.57);
				transition: all 0.3s ease 0s;
			}

			.tag {
				margin-left: 0.5em;
				margin-right: 0.5em;
				text-transform: uppercase;
				border: 0.5px solid aqua;
				border-radius: 20%;
			}

			.tag:hover {
				border: 3px solid aqua;
				border-radius: 20%;
			}
			
			.tag:nth-of-type(1n):hover{
				font-weight: bold;
			}

			body{
				background-color: #272727;
			}

			.content{
				color: #B8E4F9; 
			}

			.tag:nth-of-type(1n) {
				color: var(--c-green);
			}
			.tag:nth-of-type(2n) {
				color: var(--c-orange);
			}
			.tag:nth-of-type(3n) {
				color: var(--c-blue);
			}
			.tag:nth-of-type(4n) {
				color: var(--c-pink);
			}

			.title {
				color:aqua;
				text-shadow: 2px 2px 2px purple;
				font-size: var(--f-u8);
				font-weight: 900;
				text-transform: uppercase;
				letter-spacing: 0.0625em;
			}

			.leadIn {
				padding-top: 4em;
				color: var(--t-bg);
				background-color: var(--t-fg);
				text-align: center;
			}

			.tagline {
				font-weight: 300;
				font-size: var(--f-u3);
				line-height: 1.5;
			}

			.content {
				font-size: var(--f-u1);
				line-height: 2.2;
				max-width: 50em;
				margin: auto;
			}
			
			.wrapper {
				padding-bottom: 0.1em;
				margin-bottom: 2em;
			}

			footer {
				text-align: center;
				margin-top: 3rem;
				margin-bottom: 3rem;
			}
		</style>
	</head>
	<body>
		<Nav />
		<header style={`background-image:url(${content.img})`} class="hero">
			<h1 class="title">{content.title}</h1>
		</header>
		<div class="leadIn">
			<div class="wrapper">
				{content.tags.map((t: unknown) => <span class="tag">{t}</span>)}
				<h3 class="tagline">{content.description}</h3>
			</div>
		</div>
		<div class="wrapper">
			<div class="content"><slot /></div>
		</div>
		<footer>
			<a href="/projects" class="button">View More</a>
		</footer>
		<Footer />
	</body>
</html>
