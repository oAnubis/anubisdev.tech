---
import MainHead from '../components/MainHead.astro';
import Footer from '../components/Footer.astro';
import Nav from '../components/Nav.astro';
import PortfolioPreview from '../components/PortfolioPreview.astro';

const projects = (await Astro.glob('./project/**/*.md'))
	.filter(({ frontmatter }) => !!frontmatter.publishDate).filter((projects) => !projects.frontmatter.draft)
	.sort(
		(a, b) =>
			new Date(b.frontmatter.publishDate).valueOf() - new Date(a.frontmatter.publishDate).valueOf()
	);
---

<html lang="en">
	<head>
		<MainHead
			title="All Projects | Brandon Coburn"
			description="Learn about Brandon Coburn's most recent projects"
		/>
		<style>
			.grid {
				display: grid;
				grid-gap: 3rem;
				margin-bottom: 3rem;
			}
			.title {
				color: var(--c-titletext);
				text-decoration: underline;
				margin-top: 2rem;
				margin-bottom: 2rem;
			}
		</style>
	</head>
	<body>
		<Nav />
		<div class="wrapper">
			<h1 class="title">All Projects</h1>
			<div class="grid">
				{projects.map((project) => <PortfolioPreview project={project} />)}
			</div>
		</div>
		<Footer />
	</body>
</html>
