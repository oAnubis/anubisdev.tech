---
// Component Imports
import MainHead from '../components/MainHead.astro';
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';
import PortfolioPreview from '../components/PortfolioPreview.astro';
import BlogPreview from '../components/BlogPreview.astro';
import "../styles/animatetext.scss";


// Data Fetching: List all Markdown posts in the repo.
const projects = await Astro.glob('./project/**/*.md');
const featuredProject = projects[0];


const posts = await Astro.glob('./blog/**/*.md');
const featuredPost = posts[0];




// Full Astro Component Syntax:
// https://docs.astro.build/core-concepts/astro-components/
---

<html lang="en">
	<head>
		<MainHead
			title="Brandon Coburn: Personal Site"
			description="Brandon Coburn: Developer, Student, and Gamer..."
		/>
		<style>
			/* Default Styling */
			.wrapper {
				margin-top: 2em;
				margin-bottom: 2em;
			}

			.hero {
				position: relative;
				overflow: hidden;
			}

			.body {
				background-color: var(--c-body);
			}
			
			.img {
				display: block;
				width: 100%;
				height: auto;
			}

			.gradient,
			.gradient2 {
				background-image: url('/assets/mesh-gradient.png');
				background-size: cover;
				pointer-events: none;
				mix-blend-mode: screen;
				width: 100%;
				height: 100%;
				position: absolute;
				top: 0;
				left: 0;
				z-index: 2;
			}

			.gradient2 {
				mix-blend-mode: multiply;
				background-size: cover;
			}

			.overlay {
				position: absolute;
				top: 0;
				left: 0;
				width: 100%;
				height: 100%;
				z-index: 10;
				display: flex;
				flex-direction: column;
				align-items: flex-start;
				justify-content: center;
				padding-left: 1rem;
			}

			.title {
				font-weight: 900;
				font-size: var(--f-u6);
				margin-bottom: 0.5rem;
				margin-top: 0;
			}

			.grid {
				display: grid;
				grid-gap: 2rem;
			}

			.sectionTitle {
				color: var(--c-titletext);
				font-weight: 700;
				font-size: var(--f-u8);
				text-decoration: underline;
				margin-top: 1rem;
				margin-bottom: 2rem;
				text-align: center;
			}

			.roles {
				display: flex;
				flex-wrap: wrap;
				gap: 0.5em;
				font-size: var(--f-d1);
				padding-right: 1em;
			}

			
			.role {
				position: relative;
				display: inline-block;
				white-space: nowrap;
				font-weight: 900;
				color: var(--t-bg);
				background-color: var(--t-fg);
				padding: 0.25em 0.5em;
				z-index: 2;
			}

			.role:nth-of-type(1) .invert {
				background-color: var(--c-pink);
			}

			.role:nth-of-type(2) .invert {
				background-color: var(--c-blue);
			}

			.role:nth-of-type(3) .invert {
				background-color: var(--c-green);
			}

			.role:hover .invert {
				clip-path: polygon(0% 0%, 100% 0%, 100% 100%, 0% 100%);
			}

			.invert {
				position: absolute;
				color: var(--t-fg);
				display: flex;
				align-items: center;
				justify-content: center;
				width: 100%;
				height: 100%;
				top: 0;
				left: 0;
				pointer-events: none;
				clip-path: polygon(0% 100%, 100% 100%, 100% 200%, 0% 200%);
				transition: clip-path cubic-bezier(0.4, 0, 0.5, 1) 150ms;
			}

			.desc {
				font-size: var(--f-u1);
				margin-top: 1.5rem;
				margin-bottom: 0;
			}

			.subtitle {
				display: block;
				font-weight: 400;
				font-size: var(--f-d6);
				letter-spacing: -0.0625em;
			}

			.bio {
				color: var(--c-bodytext);
				line-height: 2;
				margin-bottom: 2rem;
			}

			.bio > span:first-of-type {
				line-height: 1;
				margin-bottom: 0.5em;
				display: block;
				font-weight: 700;
				font-size: var(--f-u4);
			}

			.buttonContainer {
				text-align: center;
				margin-top: 2em;
			}

			.buttonContainer2 {
				text-align: center;
			}

			.button{
				border: none;
				background: var(--c-buttonbackground);
				color: aqua !important;
				font-weight: 100;
				padding: 20px;
				text-transform: uppercase;
				border-radius: 6px;
				display: inline-block;
				transition: all 0.3s ease 0s;
			}

			.button:hover{
				color: var(--c-buttonhover) !important;
				font-weight: 700 !important;
				letter-spacing: 3px;
				background: none;
				-webkit-box-shadow: 0px 5px 40px -10px rgba(0,0,0,0.57);
				-moz-box-shadow: 0px 5px 40px -10px rgba(0,0,0,0.57);
				transition: all 0.3s ease 0s;
			}

			/* Responsive Design */

			@media (min-width: 1200px) {
				.grid {
					grid-template-columns: 2fr;
				}
			}

			@media (min-width: 750px) {
				.overlay {
					padding-left: 4rem;
					padding-top: 1rem;
				}

				.hero {
					height: 45vw;
				}

				.title {
					font-size: var(--f-u12);
				}

				.role {
					font-size: var(--f-u3);
				}
			}

			@media (max-width: 390px){
				.roles{
					font-size: 0.831428283688879em;
				}

				.sectionTitle {
					font-size: 40px;
				}
			}

			@media (max-width: 374px) {
				.overlay {
					padding-left: 24px;
				}
			}

			@media (max-width: 320px){
				.title {
					font-size: 2.1em;
				}

				.sectionTitle {
					font-size: 35px;
				}
			}

			@media (max-width: 480px) {
				.flexbox {
					display: flex;
					gap: 1em;
				}

				.grid {
					grid-template-columns:
					"t"
					"b"
					"t"
					"p"
					"a";

					gap: 0rem;
				}

				.sectionTitle {
					margin-top: 0em;
				}

				.buttonContainer {
					margin-bottom: 2rem;
				}

				.words{
					text-align: center;
				}

				.overlay{
					height: 130%;
				}
				
				.heroimage{
					height: 200px;
				}

				.roles {
					
				}
			}
		</style>


	</head>
	<body class="body">
		<Nav />
		<header class="hero">
			<img  class="heroimage"
				width="1600"
				height="1131"
				class="img"
				src="https://images.unsplash.com/photo-1605379399642-870262d3d051?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2106&q=80"
				srcset="https://images.unsplash.com/photo-1605379399642-870262d3d051?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2106&q=80 800w,https://images.unsplash.com/photo-1605379399642-870262d3d051?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2106&q=80 1200w,https://images.unsplash.com/photo-1605379399642-870262d3d051?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2106&q=80 1600w,https://images.unsplash.com/photo-1605379399642-870262d3d051?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2106&q=80 2400w"
				sizes="(max-width: 800px) 800px, (max-width: 1200px) 1200px, (max-width: 1600px) 1600px, (max-width: 2400px) 2400px, 1200px"
			/>
			<div class="gradient"></div>
			<div class="gradient2"></div>
			<div class="overlay">
				<h1 class="title">
					<small class="subtitle">The personal site of</small>Brandon Coburn
				</h1>
				<div class="roles">
					<span class="role">üë©‚Äçüíª Software Developer <span class="invert">üë©‚Äçüíª Software Developer</span></span>
					<span class="role">üéì Student <span class="invert">üéì Student</span></span>
					<span class="role">üéÆ Gamer <span class="invert">üéÆ Gamer</span></span>
				</div>
			</div>
		</header>
		<main class="wrapper">
			<div class="grid">
				<h3 class="sectionTitle">Recent Blogs</h3>
				<div class="flexbox">
					<div class="section">
						<BlogPreview post={featuredPost}/>
						<div class="buttonContainer">
							<a href="/blogs/" class="button">View All</a>
						</div>
					</div>
					<div class="section">
						<BlogPreview post={featuredPost}/>
						<div class="buttonContainer">
							<a href="/blogs/" class="button">View All</a>
						</div>
					</div>
				</div>
				<h3 class="sectionTitle">Selected Work</h3>
				<div class="flexbox">
					<div class="section">
						<PortfolioPreview project={featuredProject} />
						<div class="buttonContainer">
							<a href="/projects/" class="button">View All</a>
						</div>
					</div>
					<div class="section">
						<PortfolioPreview project={featuredProject} />
						<div class="buttonContainer">
							<a href="/projects/" class="button">View All</a>
						</div>
					</div>
				</div>
				<h3 class="sectionTitle">About me</h3>
				<div class="section">
					<div class="words">
						<p class="bio">
							<span>Hello World!üôã‚Äç‚ôÇÔ∏è</span> I love learning new and exciting technologies, techniques, and concepts with the goal of 
							learning something new each day.
							<br><br>
							I am currently enrolled at Full Sail University, pursuing a Bachelor's in Game Development, heavily focused
							on OOP principles, design patterns, algorithms and database management.
						</p>
					</div>
						<p>
							<div class="buttonContainer2">
								<a href="/about" class="button">Read My Full Bio!</a>
							</div>
						</p>
					</div>
				</div>
			</main>
			<Footer />
		</body>
	</html>
